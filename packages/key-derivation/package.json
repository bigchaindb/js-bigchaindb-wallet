    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "eslint": "^7.16.0",
    "rimraf": "~3.0.2",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "bip39": "^3.0.4",
    "bs58": "^4.0.1",
    "ed2curve": "^0.3.0",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1"
