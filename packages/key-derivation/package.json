{
  "name": "@bigchaindb/wallet-hd",
  "version": "0.4.1",
  "description": "Key derivation for BigChainDB",
  "keywords": [
    "bigchain",
    "ed25519",
    "keys"
  ],
  "license": "Apache-2.0",
  "author": "getlarge <ed@getlarge.eu>",
  "homepage": "https://github.com/bigchaindb/js-bigchaindb-wallet#readme",
  "publishConfig": {
    "cache": "~/.npm",
    "registry": "https://registry.npmjs.org/"
  },
  "publicConfig": {
    "access": "public"
  },
  "types": "dist/index",
  "main": "dist/index",
  "browser": "dist/index",
